{
  "version": 8,
  "name": "Roman Empire",
  "metadata": {
    "mapbox:autocomposite": false,
    "mapbox:type": "template",
    "maputnik:renderer": "mbgljs",
    "openmaptiles:version": "3.x"
  },
  "sources": {
    "color-relief": {
      "type": "raster",
      "url": "https://klokantech.github.io/dare-raster-tiles/background.json",
      "tileSize": 256
    },
    "hillshade": {
      "type": "raster",
      "url": "https://klokantech.github.io/dare-raster-tiles/hillshade.json",
      "tileSize": 256
    },
    "roman-empire": {
      "type": "vector",
      "url": "https://gist.githubusercontent.com/klokan/1703cd90da5cfb0e74323f8f36b15b98/raw/tile.json"
    }
  },
  "glyphs": "https://fonts.openmaptiles.org/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "background-color": "rgba(255, 255, 255, 1)"
      }
    },
    {
      "id": "color-relief",
      "type": "raster",
      "source": "color-relief",
      "maxzoom": 24
    },
    {
      "id": "hillshade",
      "type": "raster",
      "source": "hillshade",
      "maxzoom": 22,
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "raster-opacity": 0.3
      }
    },
    {
      "id": "provinces",
      "type": "line",
      "source": "roman-empire",
      "source-layer": "provinces",
      "minzoom": 3,
      "maxzoom": 6,
      "paint": {
        "line-color": "rgba(128, 0, 128, 1)",
        "line-width": {
          "stops": [
            [
              3,
              1
            ],
            [
              4,
              1
            ],
            [
              5,
              1.5
            ],
            [
              6,
              1.5
            ]
          ]
        }
      }
    },
    {
      "id": "fortifications",
      "type": "line",
      "source": "roman-empire",
      "source-layer": "fortifications",
      "maxzoom": 22,
      "paint": {
        "line-color": "rgba(134, 52, 52, 1)"
      }
    },
    {
      "id": "provinces_label",
      "type": "symbol",
      "source": "roman-empire",
      "source-layer": "provinces_label",
      "minzoom": 3,
      "maxzoom": 7,
      "layout": {
        "text-size": {
          "stops": [
            [
              3,
              10
            ],
            [
              4,
              10
            ],
            [
              5,
              12
            ],
            [
              6,
              12
            ],
            [
              7,
              14
            ]
          ]
        },
        "text-font": [
          "Klokantech Noto Sans Regular"
        ],
        "visibility": "visible",
        "text-offset": [
          0,
          0.5
        ],
        "icon-size": 1,
        "text-anchor": "top",
        "text-field": "{name}",
        "text-max-width": 8
      },
      "paint": {
        "text-color": "rgba(0, 0, 0, 1)",
        "text-halo-width": 1,
        "text-halo-color": "rgba(255, 255, 255, 0.75)",
        "text-halo-blur": 1
      }
    },
    {
      "id": "roads_low_minor",
      "type": "line",
      "source": "roman-empire",
      "source-layer": "roads",
      "minzoom": 7,
      "maxzoom": 12,
      "filter": [
        "all",
        [
          "==",
          "$type",
          "LineString"
        ],
        [
          "==",
          "Major_or_M",
          "0"
        ]
      ],
      "paint": {
        "line-color": "rgba(193, 77, 77, 0.6)",
        "line-width": {
          "stops": [
            [
              7,
              1
            ],
            [
              10,
              1.25
            ]
          ]
        }
      }
    },
    {
      "id": "roads_low_major",
      "type": "line",
      "source": "roman-empire",
      "source-layer": "roads",
      "minzoom": 5,
      "maxzoom": 12,
      "filter": [
        "all",
        [
          "==",
          "$type",
          "LineString"
        ],
        [
          "==",
          "Major_or_M",
          "1"
        ]
      ],
      "paint": {
        "line-color": "rgba(255, 0, 0, 0.6)",
        "line-width": {
          "stops": [
            [
              5,
              1
            ],
            [
              7,
              1.5
            ],
            [
              10,
              1.75
            ]
          ]
        }
      }
    },
    {
      "id": "places_major_fort",
      "type": "symbol",
      "source": "roman-empire",
      "source-layer": "places"
    },
    {
      "id": "places_major_settlement",
      "type": "symbol",
      "source": "roman-empire",
      "source-layer": "places",
      "sprite": "icons",
      "icon-image": "settlement.svg",
      "settlement.svg": {
        "width": 32,
        "height": 32,
        "x": 0,
        "y": 0,
        "pixelRatio": 1
      }
    }
  ],
  "sprite": "https://klokantech.github.io/roman-empire-vector-map/icons/sprite",
  "id": "style"
}
