{
  "version": 8,
  "name": "Roman Empire",
  "metadata": {
    "mapbox:autocomposite": false,
    "mapbox:type": "template",
    "maputnik:renderer": "mbgljs",
    "openmaptiles:version": "3.x"
  },
  "sources": {
    "color-relief": {
      "type": "raster",
      "url": "https://klokantech.github.io/dare-raster-tiles/background.json",
      "tileSize": 256
    },
    "hillshade": {
      "type": "raster",
      "url": "https://klokantech.github.io/dare-raster-tiles/hillshade.json",
      "tileSize": 256
    },
    "roman-empire": {
      "type": "vector",
      "url": "https://gist.githubusercontent.com/jirik/6bc205608e98ed0630f1d7a37aa11ea0/raw/tile.json"
    }
  },
  "glyphs": "https://fonts.openmaptiles.org/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "rgba(255, 255, 255, 1)"
      }
    },
    {
      "id": "color-relief",
      "type": "raster",
      "source": "color-relief",
      "maxzoom": 24
    },
    {
      "id": "hillshade",
      "type": "raster",
      "source": "hillshade",
      "maxzoom": 22,
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "raster-opacity": 0.3
      }
    },
    {
      "id": "provinces",
      "type": "line",
      "source": "roman-empire",
      "source-layer": "provinces",
      "maxzoom": 7,
      "paint": {
        "line-color": "rgba(154, 0, 173, 1)"
      }
    },
    {
      "id": "fortifications",
      "type": "line",
      "source": "roman-empire",
      "source-layer": "fortifications",
      "maxzoom": 22,
      "paint": {
        "line-color": "rgba(134, 52, 52, 1)"
      }
    },
    {
      "id": "provinces_label",
      "type": "symbol",
      "source": "roman-empire",
      "source-layer": "provinces_label",
      "maxzoom": 24,
      "layout": {
        "text-font": [
          "Open Sans Regular"
        ],
        "text-field": "{name}",
        "text-size": 12
      }
    }
  ],
  "sprites": "https://klokantech.github.io/roman-empire-vector-map/icons/sprite",
  "id": "style"
}