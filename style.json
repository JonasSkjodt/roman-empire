{
  "version": 8,
  "name": "Roman Empire",
  "metadata": {
    "mapbox:autocomposite": false,
    "mapbox:type": "template",
    "maputnik:renderer": "mbgljs",
    "openmaptiles:version": "3.x"
  },
  "sources": {
    "color-relief": {
      "type": "raster",
      "url": "https://klokantech.github.io/dare-raster-tiles/background.json",
      "tileSize": 256
    },
    "hillshade": {
      "type": "raster",
      "url": "https://klokantech.github.io/dare-raster-tiles/hillshade.json",
      "tileSize": 256
    },
    "roman-empire": {
      "type": "vector",
      "url": "https://gist.githubusercontent.com/klokan/1703cd90da5cfb0e74323f8f36b15b98/raw/tile.json"
    }
  },
  "glyphs": "https://fonts.openmaptiles.org/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "background-color": "rgba(255, 255, 255, 1)"
      }
    },
    {
      "id": "color-relief",
      "type": "raster",
      "source": "color-relief",
      "maxzoom": 24
    },
    {
      "id": "hillshade",
      "type": "raster",
      "source": "hillshade",
      "maxzoom": 22,
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "raster-opacity": 0.3
      }
    },
    {
      "id": "provinces",
      "type": "line",
      "source": "roman-empire",
      "source-layer": "provinces",
      "maxzoom": 7,
      "paint": {
        "line-color": "rgba(154, 0, 173, 1)"
      }
    },
    {
      "id": "fortifications",
      "type": "line",
      "source": "roman-empire",
      "source-layer": "fortifications",
      "maxzoom": 22,
      "paint": {
        "line-color": "rgba(134, 52, 52, 1)"
      }
    },
    {
      "id": "provinces_label",
      "type": "symbol",
      "source": "roman-empire",
      "source-layer": "provinces_label",
      "minzoom": 0,
      "maxzoom": 7,
      "layout": {
        "text-size": 14,
        "text-font": [
          "Klokantech Noto Sans Regular"
        ],
        "visibility": "visible",
        "text-offset": [
          0,
          0.5
        ],
        "icon-size": 1,
        "text-anchor": "top",
        "text-field": "{name}",
        "text-max-width": 8
      },
      "paint": {
        "text-color": "rgba(27, 22, 22, 1)",
        "text-halo-width": 1,
        "text-halo-color": "rgba(255,255,255,0.75)",
        "text-halo-blur": 1
      }
    }
  ],
  "sprites": "https://klokantech.github.io/roman-empire-vector-map/icons/sprite",
  "id": "style"
}